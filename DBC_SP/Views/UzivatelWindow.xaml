<Window x:Class="DBC_SP.UzivatelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBC_SP"
        mc:Ignorable="d"
        Title="Editor Uživatele" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Jméno -->
            <RowDefinition Height="Auto"/>
            <!-- Příjmení -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <!-- Telefon -->
            <RowDefinition Height="Auto"/>
            <!-- Adresa -->
            <RowDefinition Height="*"/>
            <!-- Mezera -->
            <RowDefinition Height="Auto"/>
            <!-- Tlačítko -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 1. Jméno -->
        <Label Grid.Row="0" Grid.Column="0" Content="Jméno:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,5" Text="{Binding Jmeno, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- 2. Příjmení -->
        <Label Grid.Row="1" Grid.Column="0" Content="Příjmení:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5" Text="{Binding Prijmeni, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- 3. Email -->
        <Label Grid.Row="2" Grid.Column="0" Content="Email:"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,5" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- 4. Telefon -->
        <Label Grid.Row="3" Grid.Column="0" Content="Telefon:"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,5" Text="{Binding Telefon, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- 5. Adresa -->
        <Label Grid.Row="4" Grid.Column="0" Content="Adresa:"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="0,5" Text="{Binding Adresa, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- TLAČÍTKO ULOŽIT -->
        <!-- Zde používáme jednoduchý trik: IsDefault="True" znamená, že Enter potvrdí okno -->
        <!-- Click="BtnOk_Click" je malá výjimka z MVVM pro dialogová okna, abychom to nekomplikovali -->
        <Button Grid.Row="6" Grid.Column="1" Content="✅ Hotovo" IsDefault="True" Click="BtnOk_Click" Height="30" Margin="0,20,0,0"/>

    </Grid>
</Window>